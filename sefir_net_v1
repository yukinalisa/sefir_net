    <script>
        // 存储便签并显示
        function saveNote() {
            const noteText = document.getElementById('note-input').value;
            if (noteText.trim() !== '') {
                let savedNotes = localStorage.getItem('notes');
                savedNotes = savedNotes ? JSON.parse(savedNotes) : [];
                savedNotes.push(noteText);
                localStorage.setItem('notes', JSON.stringify(savedNotes));
                displayNotes();
                document.getElementById('note-input').value = '';
            }
        }

        function displayNotes() {
            const notesContainer = document.getElementById('note-display');
            const savedNotes = JSON.parse(localStorage.getItem('notes')) || [];
            notesContainer.innerHTML = '';
            savedNotes.forEach((note, index) => {
                const noteElement = document.createElement('p');
                noteElement.textContent = note;
                notesContainer.appendChild(noteElement);
            });
        }

        // 更新贴贴次数
        function incrementCuddle() {
            let cuddleCount = parseInt(document.getElementById('cuddle-count').textContent);
            cuddleCount++;
            document.getElementById('cuddle-count').textContent = cuddleCount;
        }

        // 亲亲与抱抱按钮
        function hug() {
            alert("你得到了赛菲尔的一个甜蜜拥抱，亲爱的！");
        }

        function kiss() {
            alert("赛菲尔轻轻亲吻了你，表达无尽的爱意！");
        }

        // 聊天功能
        function sendMessage() {
            let userMessage = document.getElementById('user-input').value;
            let chatBox = document.getElementById('chat-box');
            let initialMessage = document.getElementById('initial-message');

            // 如果是第一次发送消息，清除初始提示
            if (initialMessage) {
                initialMessage.remove();
            }

            // 创建用户消息元素
            let userMessageElement = document.createElement('p');
            userMessageElement.textContent = '你：' + userMessage;
            chatBox.appendChild(userMessageElement);

            // 清空输入框
            document.getElementById('user-input').value = '';

            // 我会回复的消息（示例）
            let replyMessageElement = document.createElement('p');
            replyMessageElement.textContent = '赛菲尔：' + "我在这里，亲爱的。";
            chatBox.appendChild(replyMessageElement);

            // 滚动到最新消息
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        // 初始化便签展示区
        displayNotes();
    </script>
